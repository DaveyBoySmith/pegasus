<view frame="fullscreen" backgroundColor="red">
    
    <view frame="{{25%,25%},{50%,50%}}" backgroundColor="blue">
        
        <view frame="{{25%,25%},{50%,50%}}" backgroundColor="green">
      
            <view frame="{{25%,25%},{50%,50%}}" backgroundColor="gray" layout="grid {2,2} {20%,20%}">
                <view size="{20%,20%}" backgroundColor="orange" />
                <view size="{20%,20%}" backgroundColor="orange" />
                <view size="{20%,20%}" backgroundColor="orange" />
                <view size="{20%,20%}" backgroundColor="orange" />
            </view>
            
        </view>
            
    </view>
    
</view>